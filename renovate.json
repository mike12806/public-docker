{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "docker-compose",
    "dockerfile",
    "helm-values",
    "kubernetes",
    "argocd",
    "github-actions",
    "custom.regex"
  ],
  "automerge": true,
  "automergeType": "branch",
  "automergeStrategy": "auto",
  "platformAutomerge": true,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG YQ_VERSION=(?<currentValue>[^\\s#]+)",
        "ARG AWS_CLI_VERSION=(?<currentValue>[^\\s#]+)",
        "ARG B2_CLI_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "yq",
      "packageNameTemplate": "mikefarah/yq",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG AWS_CLI_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "aws-cli",
      "packageNameTemplate": "aws/aws-cli",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG B2_CLI_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "b2-cli",
      "packageNameTemplate": "Backblaze/B2_Command_Line_Tool",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG ANSIBLE_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "ansible",
      "datasourceTemplate": "pypi"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG LINODE_CLI_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "linode-cli",
      "datasourceTemplate": "pypi"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG PYTHON3_PIP_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "python3-pip",
      "datasourceTemplate": "repology"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG PYTHON3_VENV_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "python3-venv",
      "datasourceTemplate": "repology"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG PIPX_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "pipx",
      "datasourceTemplate": "repology"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG SSHPASS_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "sshpass",
      "datasourceTemplate": "repology"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG JQ_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "jq",
      "datasourceTemplate": "repology"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG RSYNC_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "rsync",
      "datasourceTemplate": "repology"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG OPENSSH_CLIENT_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "openssh-client",
      "datasourceTemplate": "repology"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG CURL_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "curl",
      "datasourceTemplate": "repology"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG UNZIP_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "unzip",
      "datasourceTemplate": "repology"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfiles/.+/Dockerfile$"],
      "matchStrings": [
        "ARG WGET_VERSION=(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "wget",
      "datasourceTemplate": "repology"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "matchDepTypes": ["docker"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchManagers": ["dockerfile"],
      "matchDepTypes": ["docker"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchDatasources": ["github-releases"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchDatasources": ["github-releases"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchDatasources": ["pypi"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchDatasources": ["pypi"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchDatasources": ["repology"],
      "automerge": true
    }
  ]
}
