{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "docker-compose",
    "dockerfile",
    "helm-values",
    "kubernetes",
    "argocd",
    "github-actions"
  ],
  "argocd": {
    "managerFilePatterns": [
      "/kubernetes/apps/.*\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/deployment\\.ya?ml$/"
    ]
  },
  "docker-compose": {
    "managerFilePatterns": [
      "/docker-compose\\.ya?ml$/"
    ]
  },
  "github-actions": {
    "managerFilePatterns": [
      "/^\\.github/workflows/[^/]+\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": []
  },
  "automerge": true,
  "automergeStrategy": "squash",
  "platformAutomerge": true,
  "respectLatest": true,
  "ignoreTests": true,
  "minimumReleaseAge": null,
  "rebaseWhen": "auto",
  "packageRules": [
    {
      "matchDepNames": [
        "immich"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "image:\\s*tag:\\s*(?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "immich",
      "versioningTemplate": "semver"
    }
  ]
}
